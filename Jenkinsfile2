pipeline {
    agent any

    stages {
        stage('git') {
             steps {
    script {
        try {
            git url: 'https://github.com/saurabhsawarn00/simple-rest-war.git', branch: 'master'
            echo '✅ Repository cloned successfully!'
            } 
        catch (Exception e) 
        {
            echo "❌ Git clone failed: ${e.getMessage()}"
            error('Stopping pipeline due to Git failure')
        }
    }
}
        }
        stage('build') {
            steps {
                bat 'mvn clean package'
            }            
            
            }
        }
    }


